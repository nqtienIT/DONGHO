<!--header-->
<div class="header-middle">
    <!--header-middle-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="logo pull-left">
                    <a href="@Url.Action("Index", "Home")"><img src="~/Content/img/home/logo.png" alt="" /></a>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="shop-menu pull-right">
                    <ul class="nav navbar-nav">
                        @*<li><a href="#"><i class="fa fa-user"></i> Account</a></li>
                            <li><a href="#"><i class="fa fa-star"></i> Wishlist</a></li>
                            <li><a href="checkout.html"><i class="fa fa-crosshairs"></i> Checkout</a></li>*@
                        <li>
                            <a title="Giỏ hàng" href="@Url.Action("Details", "Cart")">
                                <i class="fa fa-shopping-cart"></i>
                                <span class="badge" id="lblCartCount">@ViewBag.NavNumProduct</span>
                            </a>
                        </li>
                        @{
                            if (ViewBag.NavUser == null)
                            {
                                <li>
                                    <a title="Đăng nhập" href="@Url.Action("Login", "Auth")">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a title="Đơn hàng của tôi" href="@Url.Action("Orders", "Cart")">
                                        <i class="fas fa-clipboard-list"></i>
                                    </a>
                                </li>
                                <li>
                                    <a title="@ViewBag.NavUser.FullName">
                                        <i class="fa fa-user"></i>
                                    </a>
                                </li>
                                <li>
                                    <a title="Đăng Xuất" href="@Url.Action("Logout", "Auth")">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div><!--/header-middle-->

