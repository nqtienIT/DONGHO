@model CuaHangDongHo.Models.Product
@using CuaHangDongHo.Helpers;
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Chi tiết sản phẩm</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal">
        <div class="card-body">
            <div class="form-group row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Slug, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Slug)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <img src="@Url.Content("~/Content/img/products/" + Model.Img)" style="max-height: 200px; max-width: 400px"/>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @*@Html.DisplayFor(model => model.Detail)*@
                    @Html.Raw(Model.Detail)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Number)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.PriceVND, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.PriceVND)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.PriceSaleVND, htmlAttributes: new { @class = "col-sm-2 col-form-label" })

                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.PriceSaleVND)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.BrandName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })

                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.BrandName)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.StatusProduct, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.StatusProduct)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Model.Type.GetEnumDisplayName()
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Strap, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Model.Strap.GetEnumDisplayName()
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Sold, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Sold)
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer text-right">
            @Html.ActionLink("Quay lại", "Index", "Products", null, new { @class = "btn btn-info float-left" })
            @Html.ActionLink("Chỉnh sửa", "Edit", "Products", new { id = Model.Id }, new { @class = "btn btn-success float-right" })
        </div>
        <!-- /.card-footer -->
    </form>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@section AfterJs {
    <script src="~/Scripts/admin/products-js.js"></script>
}