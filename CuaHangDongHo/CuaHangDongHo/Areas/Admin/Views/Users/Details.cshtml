@model CuaHangDongHo.Models.User
@using CuaHangDongHo.Helpers;
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Chi tiết</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal">
        <div class="card-body">
            <div class="row">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.UserName)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    **************
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.FullName)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Model.Gender.GetEnumDisplayName()
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Phone)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.AddressInfo)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Access, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Model.Access.GetEnumDisplayName()
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Model.Status.GetEnumDisplayName()
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Model.Type.GetEnumDisplayName()
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <a class="btn btn-info" href="@Url.Action("Index", "Users", new { area = "Admin"})">Quay lại</a>
                <a class="btn btn-success float-right" href="@Url.Action("Edit", "Users", new { area = "Admin", id = Model.Id })">Sửa</a>
            </div>
            <!-- /.card-footer -->
        </div>
    </form>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
