@model CuaHangDongHo.Models.Slider

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Chi tiết</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal">
        <div class="card-body">
            <div class="row">
                @Html.LabelFor(model => model.ShortTitle, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.ShortTitle)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.LongTitle, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.LongTitle)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <img src="@Url.Content("~/Content/img/sliders/" + Model.Img)" style="max-height: 200px; max-width: 400px" />
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.SmallImg, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <img src="@Url.Content("~/Content/img/sliders/" + Model.SmallImg)" style="max-height: 200px; max-width: 400px" />
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <a class="btn btn-info" href="@Url.Action("Index", "Sliders", new { area = "Admin"})">Quay lại</a>
                <a class="btn btn-success float-right" href="@Url.Action("Edit", "Sliders", new { area = "Admin", id = Model.Id })">Sửa</a>
            </div>
            <!-- /.card-footer -->
        </div>
    </form>
</div>

