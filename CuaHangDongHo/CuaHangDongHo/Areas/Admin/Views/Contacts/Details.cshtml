@model CuaHangDongHo.Models.Contact
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Chi tiết</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal">
        <div class="card-body">
            <div class="row">
                @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.FullName)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Phone)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </div>
            </div>
            <div class="row">
                @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Detail)
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <a class="btn btn-success float-right" href="@Url.Action("Delete", "Contacts", new { id = Model.Id })">Xóa</a>
            </div>
            <!-- /.card-footer -->
        </div>
    </form>
</div>

