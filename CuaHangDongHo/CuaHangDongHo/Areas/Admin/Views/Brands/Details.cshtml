@model CuaHangDongHo.Models.Brand

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Chi tiết Thương hiệu</h3>
            <div class="mt-4">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="card-body">
                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DisplayFor(mode => mode.Name)
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        <img src="@Url.Content("~/Content/img/brands/" + Model.Img)" />
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DisplayFor(mode => mode.Description)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.Raw(Model.Detail)
                    </div>
                </div>

                <!-- /.card-body -->
                <div class="card-footer">
                    <a href="@Url.Action("Index", "Brands", new { area = "Admin" })" class="btn btn-info">Quay lại</a>
                    <a href="@Url.Action("Edit", "Brands", new { area = "Admin", Id = Model.Id })" class="btn btn-success float-right">Sửa</a>
                </div>
                <!-- /.card-footer -->
            </div>
        </form>
    </div>