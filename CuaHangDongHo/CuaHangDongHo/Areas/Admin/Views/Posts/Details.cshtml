@model CuaHangDongHo.Models.Post

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Chi tiết</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="card-body">
                <div class="row">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.Title)
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(model => model.ShortDetail, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.DisplayFor(model => model.ShortDetail)
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        <img src="@Url.Content("~/Content/img/posts/" + Model.Img)" style="max-height: 200px; max-width: 400px" />
                    </div>
                </div>
                <div class="row">
                    @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.Raw(Model.Detail)
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <a class="btn btn-info" href="@Url.Action("Index", "Users", new { area = "Admin"})">Quay lại</a>
                    <a class="btn btn-success float-right" href="@Url.Action("Edit", "Users", new { area = "Admin", id = Model.Id })">Sửa</a>
                </div>
                <!-- /.card-footer -->
            </div>
        </form>
    </div>
